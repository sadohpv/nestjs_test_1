generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  email       String   @unique
  password    String
  userName    String
  avatar      String
  fullName    String
  gender      Boolean
  address     String
  phoneNumber String   @unique
  ban         Ban
  role        Role
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Ban {
  ACCOUNT
  LIKE
  COMMENT
}

enum Role {
  USER
  DEV
  ADMIN
}
